{
  "name": "revelation-reader",
  "version": "1.0.0",
  "private": true,
  "description": "A Bible reader for the book of Revelation.",
  "repository": "https://github.com/Renddslow/revelation-reader",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "dist/index.js",
  "scripts": {
    "build:md": "node tools/parseMarkdown.js",
    "build:json": "node tools/parseJSON.js",
    "build:content": "run-s build:md build:json",
    "lint-staged": "lint-staged"
  },
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "concurrency": 4,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m"
  },
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "@types/node": "^17.0.23",
    "ava": "^4.2.0",
    "chapter-and-verse": "^3.0.4",
    "esbuild": "^0.14.35",
    "globby": "^13.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "make-dir": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "styled-components": "^5.3.5"
  }
}
