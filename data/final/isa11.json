[{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse","reference":{"id":"ISA11:1","chapter":11,"book":"Isa","verse":1,"readable":"Isaiah 11:1"}},{"type":"char","content":"Then a shoot will spring from the stem of Jesse,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And a Branch from his roots will bear fruit."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:1","chapter":11,"book":"Isa","verse":1,"readable":"Isaiah 11:1"}},{"type":"verse","reference":{"id":"ISA11:2","chapter":11,"book":"Isa","verse":2,"readable":"Isaiah 11:2"}},{"type":"char","content":"The Spirit of the Lord will rest on Him,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The spirit of wisdom and understanding,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The spirit of counsel and strength,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The spirit of knowledge and the fear of the Lord."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:2","chapter":11,"book":"Isa","verse":2,"readable":"Isaiah 11:2"}},{"type":"verse","reference":{"id":"ISA11:3","chapter":11,"book":"Isa","verse":3,"readable":"Isaiah 11:3"}},{"type":"char","content":"And He will delight in the fear of the Lord,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And He will not judge by what His eyes see,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Nor make decisions by what His ears hear;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:3","chapter":11,"book":"Isa","verse":3,"readable":"Isaiah 11:3"}},{"type":"verse","reference":{"id":"ISA11:4","chapter":11,"book":"Isa","verse":4,"readable":"Isaiah 11:4"}},{"type":"char","content":"But with righteousness He will judge the poor,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And decide with fairness for the humble of the earth;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And He will strike the earth with the rod of His mouth,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And with the breath of His lips He will slay the wicked."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:4","chapter":11,"book":"Isa","verse":4,"readable":"Isaiah 11:4"}},{"type":"verse","reference":{"id":"ISA11:5","chapter":11,"book":"Isa","verse":5,"readable":"Isaiah 11:5"}},{"type":"char","content":"Also righteousness will be the belt around His hips,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And faithfulness the belt around His waist."}]}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:5","chapter":11,"book":"Isa","verse":5,"readable":"Isaiah 11:5"}},{"type":"verse","reference":{"id":"ISA11:6","chapter":11,"book":"Isa","verse":6,"readable":"Isaiah 11:6"}},{"type":"char","content":"And the wolf will dwell with the lamb,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And the leopard will lie down with the young goat,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And the calf and the young lion and the fattened steer will be together;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And a little boy will lead them."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:6","chapter":11,"book":"Isa","verse":6,"readable":"Isaiah 11:6"}},{"type":"verse","reference":{"id":"ISA11:7","chapter":11,"book":"Isa","verse":7,"readable":"Isaiah 11:7"}},{"type":"char","content":"Also the cow and the bear will graze,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Their young will lie down together,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And the lion will eat straw like the ox."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:7","chapter":11,"book":"Isa","verse":7,"readable":"Isaiah 11:7"}},{"type":"verse","reference":{"id":"ISA11:8","chapter":11,"book":"Isa","verse":8,"readable":"Isaiah 11:8"}},{"type":"char","content":"The nursing child will play by the hole of the cobra,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And the weaned child will put his hand on the viperâ€™s den."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:8","chapter":11,"book":"Isa","verse":8,"readable":"Isaiah 11:8"}},{"type":"verse","reference":{"id":"ISA11:9","chapter":11,"book":"Isa","verse":9,"readable":"Isaiah 11:9"}},{"type":"char","content":"They will not hurt or destroy in all My holy mountain,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"For the earth will be full of the knowledge of the Lord"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"As the waters cover the sea."}]}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:9","chapter":11,"book":"Isa","verse":9,"readable":"Isaiah 11:9"}},{"type":"verse","reference":{"id":"ISA11:10","chapter":11,"book":"Isa","verse":10,"readable":"Isaiah 11:10"}},{"type":"char","content":"Then on that day"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The nations will resort to the root of Jesse,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Who will stand as a signal flag for the peoples;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And His resting place will be glorious."}]}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:10","chapter":11,"book":"Isa","verse":10,"readable":"Isaiah 11:10"}},{"type":"verse","reference":{"id":"ISA11:11","chapter":11,"book":"Isa","verse":11,"readable":"Isaiah 11:11"}},{"type":"char","content":"Then it will happen on that day that the Lord"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Will again recover with His hand the second time"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The remnant of His people who will remain,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"From Assyria, Egypt, Pathros, Cush, Elam, Shinar, Hamath,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And from the islands of the sea."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:11","chapter":11,"book":"Isa","verse":11,"readable":"Isaiah 11:11"}},{"type":"verse","reference":{"id":"ISA11:12","chapter":11,"book":"Isa","verse":12,"readable":"Isaiah 11:12"}},{"type":"char","content":"And He will lift up a flag for the nations"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And assemble the banished ones of Israel,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And will gather the dispersed of Judah"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"From the four corners of the earth."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:12","chapter":11,"book":"Isa","verse":12,"readable":"Isaiah 11:12"}},{"type":"verse","reference":{"id":"ISA11:13","chapter":11,"book":"Isa","verse":13,"readable":"Isaiah 11:13"}},{"type":"char","content":"Then the jealousy of Ephraim will depart,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And those who harass Judah will be eliminated;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Ephraim will not be jealous of Judah,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And Judah will not harass Ephraim."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:13","chapter":11,"book":"Isa","verse":13,"readable":"Isaiah 11:13"}},{"type":"verse","reference":{"id":"ISA11:14","chapter":11,"book":"Isa","verse":14,"readable":"Isaiah 11:14"}},{"type":"char","content":"They will swoop down on the slopes of the Philistines on the west;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Together they will plunder the people of the east;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"They will possess Edom and Moab,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And the sons of Ammon will be subject to them."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:14","chapter":11,"book":"Isa","verse":14,"readable":"Isaiah 11:14"}},{"type":"verse","reference":{"id":"ISA11:15","chapter":11,"book":"Isa","verse":15,"readable":"Isaiah 11:15"}},{"type":"char","content":"And the Lord will utterly destroy"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The tongue of the Sea of Egypt;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And He will wave His hand over the Euphrates River"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"With His scorching wind;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And He will strike it into seven streams"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And make people walk over in dry sandals."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA11:15","chapter":11,"book":"Isa","verse":15,"readable":"Isaiah 11:15"}},{"type":"verse","reference":{"id":"ISA11:16","chapter":11,"book":"Isa","verse":16,"readable":"Isaiah 11:16"}},{"type":"char","content":"And there will be a highway from Assyria"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"For the remnant of His people who will be left,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Just as there was for Israel"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"On the day that they came up out of the land of Egypt."}]},{"type":"verse_end","reference":{"id":"ISA11:16","chapter":11,"book":"Isa","verse":16,"readable":"Isaiah 11:16"}}]}]