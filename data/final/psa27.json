[{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse","reference":{"id":"PS27:1","chapter":27,"book":"Ps","verse":1,"readable":"Psalms 27:1"}},{"type":"char","style":"bold","content":"A Psalm of David."}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The Lord is my light and my salvation;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Whom should I fear?"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The Lord is the defense of my"},{"id":"chay","type":"hyperlink","link":"chay","content":"life"},{"type":"char","content":";"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Whom should I dread?"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:1","chapter":27,"book":"Ps","verse":1,"readable":"Psalms 27:1"}},{"type":"verse","reference":{"id":"PS27:2","chapter":27,"book":"Ps","verse":2,"readable":"Psalms 27:2"}},{"type":"char","content":"When evildoers came upon me to devour my flesh,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"My adversaries and my enemies, they stumbled and fell."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:2","chapter":27,"book":"Ps","verse":2,"readable":"Psalms 27:2"}},{"type":"verse","reference":{"id":"PS27:3","chapter":27,"book":"Ps","verse":3,"readable":"Psalms 27:3"}},{"type":"char","content":"If an army encamps against me,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"My heart will not fear;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"If war arises against me,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"In spite of this I am confident."}]}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:3","chapter":27,"book":"Ps","verse":3,"readable":"Psalms 27:3"}},{"type":"verse","reference":{"id":"PS27:4","chapter":27,"book":"Ps","verse":4,"readable":"Psalms 27:4"}},{"type":"char","content":"One thing I have asked from the Lord, that I shall seek:"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"That I may dwell in the house of the Lord all the days of my"},{"id":"chay","type":"hyperlink","link":"chay","content":"life"},{"type":"char","content":","}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"To behold the beauty of the Lord"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And to meditate in His temple."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:4","chapter":27,"book":"Ps","verse":4,"readable":"Psalms 27:4"}},{"type":"verse","reference":{"id":"PS27:5","chapter":27,"book":"Ps","verse":5,"readable":"Psalms 27:5"}},{"type":"char","content":"For on the day of trouble He will conceal me in His tabernacle;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"He will hide me in the secret place of His tent;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"He will lift me up on a rock."}]},{"type":"poetry_line","indent":2,"children":[{"type":"verse_end","reference":{"id":"PS27:5","chapter":27,"book":"Ps","verse":5,"readable":"Psalms 27:5"}},{"type":"verse","reference":{"id":"PS27:6","chapter":27,"book":"Ps","verse":6,"readable":"Psalms 27:6"}},{"type":"char","content":"And now my head will be lifted up above my enemies around me,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And I will offer sacrifices in His tent with shouts of joy;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"I will sing, yes, I will sing praises to the Lord."}]}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:6","chapter":27,"book":"Ps","verse":6,"readable":"Psalms 27:6"}},{"type":"verse","reference":{"id":"PS27:7","chapter":27,"book":"Ps","verse":7,"readable":"Psalms 27:7"}},{"type":"char","content":"Hear, Lord, when I cry with my voice,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And be gracious to me and answer me."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:7","chapter":27,"book":"Ps","verse":7,"readable":"Psalms 27:7"}},{"type":"verse","reference":{"id":"PS27:8","chapter":27,"book":"Ps","verse":8,"readable":"Psalms 27:8"}},{"type":"char","content":"When You said, “Seek My face,” my heart said to You,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"“I shall seek Your face, Lord.”"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:8","chapter":27,"book":"Ps","verse":8,"readable":"Psalms 27:8"}},{"type":"verse","reference":{"id":"PS27:9","chapter":27,"book":"Ps","verse":9,"readable":"Psalms 27:9"}},{"type":"char","content":"Do not hide Your face from me,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Do not turn Your servant away in anger;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"You have been my help;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Do not abandon me nor forsake me,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"God of my salvation!"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:9","chapter":27,"book":"Ps","verse":9,"readable":"Psalms 27:9"}},{"type":"verse","reference":{"id":"PS27:10","chapter":27,"book":"Ps","verse":10,"readable":"Psalms 27:10"}},{"type":"char","content":"For my father and my mother have forsaken me,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"But the Lord will take me up."}]}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:10","chapter":27,"book":"Ps","verse":10,"readable":"Psalms 27:10"}},{"type":"verse","reference":{"id":"PS27:11","chapter":27,"book":"Ps","verse":11,"readable":"Psalms 27:11"}},{"type":"char","content":"Teach me Your way, Lord,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And lead me on a level path"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Because of my enemies."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:11","chapter":27,"book":"Ps","verse":11,"readable":"Psalms 27:11"}},{"type":"verse","reference":{"id":"PS27:12","chapter":27,"book":"Ps","verse":12,"readable":"Psalms 27:12"}},{"type":"char","content":"Do not turn me over to the desire of my enemies,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"For false witnesses have risen against me,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And the violent witness."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:12","chapter":27,"book":"Ps","verse":12,"readable":"Psalms 27:12"}},{"type":"verse","reference":{"id":"PS27:13","chapter":27,"book":"Ps","verse":13,"readable":"Psalms 27:13"}},{"type":"char","content":"I certainly believed that I would see the goodness of the Lord"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"In the land of the"},{"id":"chay","type":"hyperlink","link":"chay","content":"living"},{"type":"char","content":"."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"PS27:13","chapter":27,"book":"Ps","verse":13,"readable":"Psalms 27:13"}},{"type":"verse","reference":{"id":"PS27:14","chapter":27,"book":"Ps","verse":14,"readable":"Psalms 27:14"}},{"type":"char","content":"Wait for the Lord;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Be strong and let your heart take courage;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Yes, wait for the Lord."}]},{"type":"verse_end","reference":{"id":"PS27:14","chapter":27,"book":"Ps","verse":14,"readable":"Psalms 27:14"}}]}]