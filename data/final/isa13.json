[{"type":"paragraph","children":[{"type":"verse","reference":{"id":"ISA13:1","chapter":13,"book":"Isa","verse":1,"readable":"Isaiah 13:1"}},{"type":"char","content":"The pronouncement concerning Babylon which Isaiah the son of Amoz saw:"}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:1","chapter":13,"book":"Isa","verse":1,"readable":"Isaiah 13:1"}},{"type":"verse","reference":{"id":"ISA13:2","chapter":13,"book":"Isa","verse":2,"readable":"Isaiah 13:2"}},{"type":"char","content":"Lift up a flag on the bare hill,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Raise your voice to them,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Wave the hand that they may enter the doors of the nobles."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:2","chapter":13,"book":"Isa","verse":2,"readable":"Isaiah 13:2"}},{"type":"verse","reference":{"id":"ISA13:3","chapter":13,"book":"Isa","verse":3,"readable":"Isaiah 13:3"}},{"type":"char","content":"I have commanded My consecrated ones,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"I have also called for My warriors"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Who boast in My eminence,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"To execute My anger."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:3","chapter":13,"book":"Isa","verse":3,"readable":"Isaiah 13:3"}},{"type":"verse","reference":{"id":"ISA13:4","chapter":13,"book":"Isa","verse":4,"readable":"Isaiah 13:4"}},{"type":"char","content":"A sound of a roar on the mountains,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Like that of many people!"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"A sound of an uproar of kingdoms,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Of nations gathered together!"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"The Lord of armies is mustering the army for battle."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:4","chapter":13,"book":"Isa","verse":4,"readable":"Isaiah 13:4"}},{"type":"verse","reference":{"id":"ISA13:5","chapter":13,"book":"Isa","verse":5,"readable":"Isaiah 13:5"}},{"type":"char","content":"They are coming from a distant country,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"From the farthest horizons,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The Lord and the weapons of His indignation,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"To destroy the whole land."}]}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:5","chapter":13,"book":"Isa","verse":5,"readable":"Isaiah 13:5"}},{"type":"verse","reference":{"id":"ISA13:6","chapter":13,"book":"Isa","verse":6,"readable":"Isaiah 13:6"}},{"type":"char","content":"Wail, for the day of the Lord is near!"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"It will come as destruction from the Almighty."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:6","chapter":13,"book":"Isa","verse":6,"readable":"Isaiah 13:6"}},{"type":"verse","reference":{"id":"ISA13:7","chapter":13,"book":"Isa","verse":7,"readable":"Isaiah 13:7"}},{"type":"char","content":"Therefore all hands will fall limp,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And every human heart will melt."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:7","chapter":13,"book":"Isa","verse":7,"readable":"Isaiah 13:7"}},{"type":"verse","reference":{"id":"ISA13:8","chapter":13,"book":"Isa","verse":8,"readable":"Isaiah 13:8"}},{"type":"char","content":"They will be terrified,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Pains and anguish will take hold of them;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"They will writhe like a woman in labor,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"They will look at one another in astonishment,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Their faces aflame."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:8","chapter":13,"book":"Isa","verse":8,"readable":"Isaiah 13:8"}},{"type":"verse","reference":{"id":"ISA13:9","chapter":13,"book":"Isa","verse":9,"readable":"Isaiah 13:9"}},{"type":"char","content":"Behold, the day of the Lord is coming,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Cruel, with fury and burning anger,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"To make the land a desolation;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And He will exterminate its sinners from it."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:9","chapter":13,"book":"Isa","verse":9,"readable":"Isaiah 13:9"}},{"type":"verse","reference":{"id":"ISA13:10","chapter":13,"book":"Isa","verse":10,"readable":"Isaiah 13:10"}},{"type":"char","content":"For the stars of heaven and their constellations"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Will not flash their light;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"The sun will be dark when it rises"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And the moon will not shed its light."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:10","chapter":13,"book":"Isa","verse":10,"readable":"Isaiah 13:10"}},{"type":"verse","reference":{"id":"ISA13:11","chapter":13,"book":"Isa","verse":11,"readable":"Isaiah 13:11"}},{"type":"char","content":"So I will punish the world for its evil"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And the wicked for their wrongdoing;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"I will also put an end to the audacity of the proud"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And humiliate the arrogance of the tyrants."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:11","chapter":13,"book":"Isa","verse":11,"readable":"Isaiah 13:11"}},{"type":"verse","reference":{"id":"ISA13:12","chapter":13,"book":"Isa","verse":12,"readable":"Isaiah 13:12"}},{"type":"char","content":"I will make mortal man scarcer than pure gold"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And mankind than the gold of Ophir."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:12","chapter":13,"book":"Isa","verse":12,"readable":"Isaiah 13:12"}},{"type":"verse","reference":{"id":"ISA13:13","chapter":13,"book":"Isa","verse":13,"readable":"Isaiah 13:13"}},{"type":"char","content":"Therefore I will make the heavens tremble,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And the earth will be shaken from its place"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"At the fury of the Lord of armies"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"In the day of His burning anger."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:13","chapter":13,"book":"Isa","verse":13,"readable":"Isaiah 13:13"}},{"type":"verse","reference":{"id":"ISA13:14","chapter":13,"book":"Isa","verse":14,"readable":"Isaiah 13:14"}},{"type":"char","content":"And it will be that, like a hunted gazelle,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Or like sheep with no one to gather them,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Each of them will turn to his own people,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And each of them will flee to his own land."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:14","chapter":13,"book":"Isa","verse":14,"readable":"Isaiah 13:14"}},{"type":"verse","reference":{"id":"ISA13:15","chapter":13,"book":"Isa","verse":15,"readable":"Isaiah 13:15"}},{"type":"char","content":"Anyone who is found will be thrust through,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And anyone who is captured will fall by the sword."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:15","chapter":13,"book":"Isa","verse":15,"readable":"Isaiah 13:15"}},{"type":"verse","reference":{"id":"ISA13:16","chapter":13,"book":"Isa","verse":16,"readable":"Isaiah 13:16"}},{"type":"char","content":"Their little ones also will be dashed to pieces"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Before their eyes;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Their houses will be plundered"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And their wives raped."}]}]},{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:16","chapter":13,"book":"Isa","verse":16,"readable":"Isaiah 13:16"}},{"type":"verse","reference":{"id":"ISA13:17","chapter":13,"book":"Isa","verse":17,"readable":"Isaiah 13:17"}},{"type":"char","content":"Behold, I am going to stir up the Medes against them,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Who will not value silver or take pleasure in gold."}]},{"type":"poetry_line","indent":2,"children":[{"type":"verse_end","reference":{"id":"ISA13:17","chapter":13,"book":"Isa","verse":17,"readable":"Isaiah 13:17"}},{"type":"verse","reference":{"id":"ISA13:18","chapter":13,"book":"Isa","verse":18,"readable":"Isaiah 13:18"}},{"type":"char","content":"And their bows will mow down the young men,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"They will not even have compassion on the fruit of the womb,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Nor will their eye pity children."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:18","chapter":13,"book":"Isa","verse":18,"readable":"Isaiah 13:18"}},{"type":"verse","reference":{"id":"ISA13:19","chapter":13,"book":"Isa","verse":19,"readable":"Isaiah 13:19"}},{"type":"char","content":"And Babylon, the beauty of kingdoms, the glory of the Chaldeansâ€™ pride,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Will be as when God overthrew Sodom and Gomorrah."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:19","chapter":13,"book":"Isa","verse":19,"readable":"Isaiah 13:19"}},{"type":"verse","reference":{"id":"ISA13:20","chapter":13,"book":"Isa","verse":20,"readable":"Isaiah 13:20"}},{"type":"char","content":"It will never be inhabited or lived in from generation to generation;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Nor will the Arab pitch his tent there,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Nor will shepherds allow their flocks to lie down there."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:20","chapter":13,"book":"Isa","verse":20,"readable":"Isaiah 13:20"}},{"type":"verse","reference":{"id":"ISA13:21","chapter":13,"book":"Isa","verse":21,"readable":"Isaiah 13:21"}},{"type":"char","content":"But desert creatures will lie down there,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And their houses will be full of owls;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Ostriches also will live there, and shaggy goats will frolic there."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA13:21","chapter":13,"book":"Isa","verse":21,"readable":"Isaiah 13:21"}},{"type":"verse","reference":{"id":"ISA13:22","chapter":13,"book":"Isa","verse":22,"readable":"Isaiah 13:22"}},{"type":"char","content":"Hyenas will howl in their fortified towers"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And jackals in their luxurious palaces."}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Her fateful time also will soon come,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And her days will not be prolonged."}]},{"type":"verse_end","reference":{"id":"ISA13:22","chapter":13,"book":"Isa","verse":22,"readable":"Isaiah 13:22"}}]}]