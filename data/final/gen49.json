[{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse","reference":{"id":"GEN49:8","chapter":49,"book":"Gen","verse":8,"readable":"Genesis 49:8"}},{"type":"char","content":"“Judah, your brothers will praise you;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"your hand will be on the neck of your enemies;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"your father’s sons will bow down to you."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"GEN49:8","chapter":49,"book":"Gen","verse":8,"readable":"Genesis 49:8"}},{"type":"verse","reference":{"id":"GEN49:9","chapter":49,"book":"Gen","verse":9,"readable":"Genesis 49:9"}},{"type":"char","content":"Judah is a lion’s cub;"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"From the prey, my son, you have gone up."}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"He crouches, he lies down as a lion,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And as a lion, who dares to stir him up?"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"GEN49:9","chapter":49,"book":"Gen","verse":9,"readable":"Genesis 49:9"}},{"type":"verse","reference":{"id":"GEN49:10","chapter":49,"book":"Gen","verse":10,"readable":"Genesis 49:10"}},{"type":"char","content":"The scepter will not depart from Judah,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Nor the ruler’s staff from between his feet,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Until Shiloh comes,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And to him shall be the obedience of the peoples."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"GEN49:10","chapter":49,"book":"Gen","verse":10,"readable":"Genesis 49:10"}},{"type":"verse","reference":{"id":"GEN49:11","chapter":49,"book":"Gen","verse":11,"readable":"Genesis 49:11"}},{"type":"char","content":"He ties his foal to the vine,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And his donkey’s colt to the choice vine;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"He washes his garments in wine,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And his robes in the blood of grapes."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"GEN49:11","chapter":49,"book":"Gen","verse":11,"readable":"Genesis 49:11"}},{"type":"verse","reference":{"id":"GEN49:12","chapter":49,"book":"Gen","verse":12,"readable":"Genesis 49:12"}},{"type":"char","content":"His eyes are dull from wine,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And his teeth white from milk."}]},{"type":"verse_end","reference":{"id":"GEN49:12","chapter":49,"book":"Gen","verse":12,"readable":"Genesis 49:12"}}]}]