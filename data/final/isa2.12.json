[{"type":"poetry","children":[{"type":"poetry_line","indent":1,"children":[{"type":"verse","reference":{"id":"ISA2:12","chapter":2,"book":"Isa","verse":12,"readable":"Isaiah 2:12"}},{"type":"char","content":"For the Lord of armies will have a day of reckoning"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Against everyone who is arrogant and haughty,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And against everyone who is lifted up,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"That he may be brought low."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA2:12","chapter":2,"book":"Isa","verse":12,"readable":"Isaiah 2:12"}},{"type":"verse","reference":{"id":"ISA2:13","chapter":2,"book":"Isa","verse":13,"readable":"Isaiah 2:13"}},{"type":"char","content":"And it will be against all the cedars of Lebanon that are lofty and lifted up,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Against all the oaks of Bashan,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA2:13","chapter":2,"book":"Isa","verse":13,"readable":"Isaiah 2:13"}},{"type":"verse","reference":{"id":"ISA2:14","chapter":2,"book":"Isa","verse":14,"readable":"Isaiah 2:14"}},{"type":"char","content":"Against all the lofty mountains,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Against all the hills that are lifted up,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA2:14","chapter":2,"book":"Isa","verse":14,"readable":"Isaiah 2:14"}},{"type":"verse","reference":{"id":"ISA2:15","chapter":2,"book":"Isa","verse":15,"readable":"Isaiah 2:15"}},{"type":"char","content":"Against every high tower,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Against every fortified wall,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA2:15","chapter":2,"book":"Isa","verse":15,"readable":"Isaiah 2:15"}},{"type":"verse","reference":{"id":"ISA2:16","chapter":2,"book":"Isa","verse":16,"readable":"Isaiah 2:16"}},{"type":"char","content":"Against all the ships of Tarshish"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And against all the delightful ships."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA2:16","chapter":2,"book":"Isa","verse":16,"readable":"Isaiah 2:16"}},{"type":"verse","reference":{"id":"ISA2:17","chapter":2,"book":"Isa","verse":17,"readable":"Isaiah 2:17"}},{"type":"char","content":"And the pride of humanity will be humbled"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And the arrogance of people will be brought low;"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"And the Lord alone will be exalted on that day,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"verse_end","reference":{"id":"ISA2:17","chapter":2,"book":"Isa","verse":17,"readable":"Isaiah 2:17"}},{"type":"verse","reference":{"id":"ISA2:18","chapter":2,"book":"Isa","verse":18,"readable":"Isaiah 2:18"}},{"type":"char","content":"And the idols will completely vanish."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA2:18","chapter":2,"book":"Isa","verse":18,"readable":"Isaiah 2:18"}},{"type":"verse","reference":{"id":"ISA2:19","chapter":2,"book":"Isa","verse":19,"readable":"Isaiah 2:19"}},{"type":"char","content":"People will go into caves of the rocks"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And into holes in the ground"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Away from the terror of the Lord"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"And the splendor of His majesty,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"When He arises to terrify the earth."}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA2:19","chapter":2,"book":"Isa","verse":19,"readable":"Isaiah 2:19"}},{"type":"verse","reference":{"id":"ISA2:20","chapter":2,"book":"Isa","verse":20,"readable":"Isaiah 2:20"}},{"type":"char","content":"On that day people will throw away to the moles and the bats"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Their idols of silver and their idols of gold,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"Which they made for themselves to worship,"}]},{"type":"poetry_line","indent":1,"children":[{"type":"verse_end","reference":{"id":"ISA2:20","chapter":2,"book":"Isa","verse":20,"readable":"Isaiah 2:20"}},{"type":"verse","reference":{"id":"ISA2:21","chapter":2,"book":"Isa","verse":21,"readable":"Isaiah 2:21"}},{"type":"char","content":"In order to go into the clefts of the rocks and the crannies of the cliffs"}]},{"type":"poetry_line","indent":1,"children":[{"type":"char","content":"Before the terror of the Lord and the splendor of His majesty,"}]},{"type":"poetry_line","indent":2,"children":[{"type":"char","content":"When He arises to terrify the earth."}]},{"type":"verse_end","reference":{"id":"ISA2:21","chapter":2,"book":"Isa","verse":21,"readable":"Isaiah 2:21"}}]}]